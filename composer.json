{
    "name": "kodnificent/crudler",
    "description": "Admin Panel for laravel and lumen applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Victor Mbamara (Kodnificent)",
            "email": "kodnificent@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kodnificent\\Crudler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kodnificent\\Crudler\\Tests\\": "tests"
        }
    },
    "require": {
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.5",
        "nunomaduro/collision": "^5.3"
    },
    "extra": {
        "laravel":  {
            "providers": [
                "Kodnificent\\Crudler\\CrudlerServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
